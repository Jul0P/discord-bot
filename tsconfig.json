{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"module": "ESNext",
		"target": "ESNext",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src/**/*.ts", "src/**/*.json"],
	"exclude": ["node_modules", "dist"]
}
